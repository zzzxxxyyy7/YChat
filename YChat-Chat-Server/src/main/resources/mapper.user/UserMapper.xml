<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ychat.common.user.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.ychat.common.user.domain.entity.User">
        <id property="id" column="id" jdbcType="BIGINT"/>
        <result property="name" column="name" jdbcType="VARCHAR"/>
        <result property="avatar" column="avatar" jdbcType="VARCHAR"/>
        <result property="sex" column="sex" jdbcType="INTEGER"/>
        <result property="openId" column="open_id" jdbcType="CHAR"/>
        <result property="activeStatus" column="active_status" jdbcType="INTEGER"/>
        <result property="lastOptTime" column="last_opt_time" jdbcType="TIMESTAMP"/>
        <result property="ipInfo" column="ip_info" jdbcType="OTHER"/>
        <result property="itemId" column="item_id" jdbcType="BIGINT"/>
        <result property="status" column="status" jdbcType="INTEGER"/>
        <result property="createTime" column="create_time" jdbcType="TIMESTAMP"/>
        <result property="updateTime" column="update_time" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,name,avatar,
        sex,openId,activeStatus,
        lastOptTime,ipInfo,itemId,
        status,createTime,updateTime
    </sql>

    <update id="modifyName">
        UPDATE user
        SET name = #{name}
        WHERE id = #{uid}
    </update>
</mapper>
